<!DOCTYPE html>
<html>
<head>
    <title>College Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/college/all">All Colleges</a></li>
                <li class="breadcrumb-item active"><%= college.name %></li>
            </ol>
        </nav>

        <div class="card">
            <% if (college.image) { %>
                <img src="<%= college.image %>" class="card-img-top" style="height: 300px; object-fit: cover;" alt="<%= college.name %>">
            <% } %>
            <div class="card-body">
                <h2 class="card-title"><%= college.name %></h2>
                <span class="badge <%= college.isApproved ? 'bg-success' : 'bg-warning' %> mb-3">
                    <%= college.isApproved ? 'Approved' : 'Pending Approval' %>
                </span>
                
                <div class="row mt-3">
                    <div class="col-md-8">
                        <h4>About</h4>
                        <p class="card-text"><%= college.description %></p>
                        <h4>Location</h4>
                        <p class="card-text"><%= college.location %></p>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5>Quick Stats</h5>
                                <p>Clubs: <%= college.clubs.length %></p>
                                <p>Groups: <%= college.groups.length %></p>
                                <p>Events: <%= college.events.length %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h4>Actions</h4>
                    <div class="btn-group">
                        <a href="/college/edit/<%= college._id %>" class="btn btn-primary">Edit College</a>
                        <button class="btn btn-danger" onclick="deleteCollege('<%= college._id %>')">Delete College</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function deleteCollege(id) {
            if (confirm('Are you sure you want to delete this college?')) {
                fetch(`/college/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/college/all';
                    } else {
                        alert('Error deleting college');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting college');
                });
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>