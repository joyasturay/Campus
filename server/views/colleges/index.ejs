<h1>Welcome to College Management System</h1>
<h2>Colleges</h2>
<div class="row">
    <% colleges.forEach(function(college) { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <% if (college.image) { %>
                    <img src="<%= college.image %>" class="card-img-top" alt="<%= college.name %>">
                <% } %>
                <div class="card-body">
                    <h5 class="card-title"><%= college.name %></h5>
                    <p class="card-text"><%= college.description %></p>
                    <p class="card-text"><small class="text-muted"><%= college.location %></small></p>
                    <span class="badge <%= college.isApproved ? 'bg-success' : 'bg-warning' %>">
                        <%= college.isApproved ? 'Approved' : 'Pending' %>
                    </span>
                    <div class="mt-3">
                        <a href="/college/<%= college._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>